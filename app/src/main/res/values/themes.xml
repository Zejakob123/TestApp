<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TestApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:titleTextStyle">@color/red</item>
    </style>

    <style name="huawei_btn_style">
        <item name="android:height">40dp</item>
        <item name="android:drawableLeft">@drawable/huawei_black_logo</item>
        <item name="drawableSize">10dp</item>
        <item name="android:drawablePadding">-16dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:drawableTint">@color/white</item>
        <item name="color">@color/red</item>
    </style>
</resources>